<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nitescorp.piim">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/imagesprojecticon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllProjects"
            android:label="All Projects" />
        <activity
            android:name=".CurrentProjects"
            android:label="Current Projects" />
        <activity
            android:name=".CompletedProjects"
            android:label="Completed Projects" />
        <activity
            android:name=".Stats"
            android:label="Stats"></activity>
        <activity android:name=".ProjectDetails"
            android:label="Project Details">

        </activity>
    </application>

</manifest>